{% extends app.request.xmlHttpRequest ? 'kosssiMyAlbumsBundle::baseAjax.html.twig' : 'kosssiMyAlbumsBundle:Homepage:homepage.html.twig' %}

{% block title %}{{ 'Registration confirmed' }}{% endblock %}

{% block ajaxContainer %}
    <section class="checkEmail popin">
        <ul>
            <li>
                <p>{{ 'registration.confirmed'|trans({'%username%': user.username}, 'FOSUserBundle') }}</p>
            </li>
            <li class="button">
                <p>
                    <a class="button" href="{{ path('homepage') }}">{{ 'Home'|trans }}</a>
                </p>
            </li>
        </ul>
    </section>
{% endblock %}
