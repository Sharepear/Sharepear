{% extends '::base.html.twig' %}

{% form_theme form _self %}

{% block collection_widget %}
    {% spaceless %}
        {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype': form_row(prototype) }) %}
        {% endif %}
        {{ block('form_widget_collection') }}
    {% endspaceless %}
{% endblock collection_widget %}

{% block form_widget_collection %}
    {% spaceless %}
        <ul {{ block('widget_container_attributes') }} data-prototype-label-add="Add an element" data-prototype-label-remove="Remove">
            {% if form.parent is empty %}
                {{ form_errors(form) }}
            {% endif %}
            {{ block('form_rows') }}
            {{ form_rest(form) }}
        </ul>
    {% endspaceless %}
{% endblock form_widget_collection %}

{% block form_row %}
    {% spaceless %}
        <li>
            {{ form_label(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </li>
    {% endspaceless %}
{% endblock form_row %}

{% block body -%}
    <h1>Album creation</h1>

    {{ form(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('album') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
