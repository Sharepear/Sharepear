{% extends '::base.html.twig' %}

{% block title %}{{ entity.name }}{% endblock %}

{% block body -%}
    <section class="container">
        <h1>{{ entity.name }}</h1>
        <div id="loader">
            <div>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
            </div>
        </div>
        <ul id="album" class="album" style="display: none;">
            {% for image in entity.images %}
                <li class="clearfix"
                    data-xs="{{ image.path | imagine_filter('xs') }}"
                    data-s="{{ image.path | imagine_filter('s') }}"
                    data-m="{{ image.path | imagine_filter('m') }}"
                    data-l="{{ image.path | imagine_filter('l') }}"
                    data-xl="{{ image.path | imagine_filter('xl') }}"
                    data-xxl="{{ image.path | imagine_filter('xxl') }}"
                        >
                    <noscript>
                        <img alt="" src="{{ image.path | imagine_filter('m') }}" />
                    </noscript>
                </li>
            {% endfor %}
        </ul>
        <ul class="actions">
            <li>
                <form action="{{ oneup_uploader_endpoint('album') }}" class="dropzone" id="my-dropzone">
                    <input type="hidden" name="album_id" value="{{ entity.id }}">
                </form>
            </li>
            <li>
                <a href="{{ path('album') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('album_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>
                {{ form(delete_form) }}
            </li>
        </ul>
    </section>
{% endblock %}
