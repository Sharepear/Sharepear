{% set layout = app.request.isXmlHttpRequest ? 'kosssiMyAlbumsBundle::baseAjax.html.twig' : 'kosssiMyAlbumsBundle:Image:base.html.twig' %}
{% extends layout %}

{% block section_content %}
    <div class="image-zoom image-responsive clearfix"
        data-xs="{{ image.path | imagine_filter('xs') }}"
        data-s="{{ image.path | imagine_filter('s') }}"
        data-m="{{ image.path | imagine_filter('m') }}"
        data-l="{{ image.path | imagine_filter('l') }}"
        data-xl="{{ image.path | imagine_filter('xl') }}"
        data-xxl="{{ image.path | imagine_filter('xxl') }}"
        data-orientation="{{ image.orientation }}"
        title="{{ image.name }}"
            >
        <ul class="actions right">
            <li title="Tourner à gauche">
                <a href="{{ path('image_rotation_right', {'id': image.id}) }}"><i class="fa fa-rotate-left"></i></a>
            </li>
            <li title="Tourner à droite">
                <a href="{{ path('image_rotation_left', {'id': image.id}) }}"><i class="fa fa-rotate-right"></i></a>
            </li>
            <li title="Quitter plein écran">
                <a class="removeFullscreen" href="{% if image.album is not null %}{{ path('album_show', {'id': image.album.id}) }}{% else %}{{ path('homepage') }}{% endif %}">
                    <i class="fa fa-compress"></i>
                </a>
            </li>
            <li title="Ajouter des photos">
                <a href="{{ path('album_show', {'id': image.id}) }}">
                    <i class="fa fa-folder-open"></i>
                </a>
            </li>
            <li title="Supprimer cette image">
                <a href="{{ path('image_delete', {'id': image.id}) }}">
                    <i class="fa fa-times-circle-o"></i>
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
